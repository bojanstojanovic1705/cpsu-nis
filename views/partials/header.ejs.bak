<!DOCTYPE html>
<html lang="sr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | CPSU</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/your-code-here.js" crossorigin="anonymous"></script>
    <script src="/js/counter.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">CPSU</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof page !== 'undefined' && page === 'home') ? 'active' : '' %>" href="/">Poƒçetna</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle <%= (typeof page !== 'undefined' && (page === 'about' || page === 'employees' || page === 'info-nabavke')) ? 'active' : '' %>" 
                           href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            O nama
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item <%= (typeof page !== 'undefined' && page === 'about') ? 'active' : '' %>" href="/o-nama">O CPSU</a></li>
                            <li><a class="dropdown-item <%= (typeof page !== 'undefined' && page === 'employees') ? 'active' : '' %>" href="/zaposleni">Zaposleni</a></li>
                            <li><a class="dropdown-item <%= (typeof page !== 'undefined' && page === 'info-nabavke') ? 'active' : '' %>" href="/informacije-i-nabavke">Informacije i javne nabavke</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle <%= (typeof page !== 'undefined' && (page === 'services' || page === 'hraniteljstvo')) ? 'active' : '' %>" 
                           href="#" id="servicesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Usluge
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item <%= (typeof page !== 'undefined' && page === 'services') ? 'active' : '' %>" href="/usluge">Sve usluge</a></li>
                            <li><a class="dropdown-item <%= (typeof page !== 'undefined' && page === 'hraniteljstvo') ? 'active' : '' %>" href="/hraniteljstvo">O hraniteljstvu</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof page !== 'undefined' && page === 'news') ? 'active' : '' %>" href="/vesti">Vesti</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof page !== 'undefined' && page === 'contact') ? 'active' : '' %>" href="/kontakt">Kontakt</a>
                    </li>
                    <% if (typeof user !== 'undefined' && user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i>Admin
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/admin/dashboard">Dashboard</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/auth/logout">Odjava</a></li>
                            </ul>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <% if (typeof messages !== 'undefined' && messages.error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= messages.error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <% if (typeof messages !== 'undefined' && messages.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= messages.success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <main>
